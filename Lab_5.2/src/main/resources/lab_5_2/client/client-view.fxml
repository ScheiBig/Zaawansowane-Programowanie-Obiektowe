<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckMenuItem?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lab_5_2.client.ClientController"
            prefHeight="400.0" prefWidth="600.0">
    <top>
        <VBox fx:id="vBox">
            <MenuBar>
                <Menu text="Sterowanie">
                    <CheckMenuItem fx:id="steer" text="Steruj"/>
                </Menu>
            </MenuBar>
            <Slider fx:id="slider" min="0.0" max="1.0" value="0.3">
                <padding>
                    <Insets topRightBottomLeft="10.0"/>
                </padding>
            </Slider>
        </VBox>
    </top>
    <center>
        <BorderPane fx:id="pane" style="-fx-background-color: WHITE;">
            <center>
                <Circle radius="10.0" fx:id="circle"/>
            </center>
        </BorderPane>
    </center>
</BorderPane>
